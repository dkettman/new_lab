api_addr                = "https://{{ ansible_default_ipv4.address }}:8200"
cluster_addr            = "https://127.0.0.1:8201"
cluster_name            = "{{ var_hashi_vault_cluster_name | default('vault-cluster') }}"
disable_mlock           = true
ui                      = true

listener "tcp" {
address       = "0.0.0.0:8200"
tls_cert_file = "/opt/vault/vault-cert.pem"
tls_key_file  = "/opt/vault/vault-key.pem"
}

backend "raft" {
path    = "/opt/vault/vault-data"
node_id = "raft-{{ ansible_hostname }}"
}
